{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Node",
        "lib": ["ES2022", "DOM"],
        "jsx": "preserve",
        "noEmit": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules/**"]
}
